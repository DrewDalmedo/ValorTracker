<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>

<%= form_with model: User.new, url: '/login', method: 'post' do |f| %>
    <%= f.label 'Username'%>
    <%= f.text_field :name %><br>
    <%= f.label :password%>
    <%= f.password_field :password %><br>
    <%= f.submit "Login" %><br>
<% end %>